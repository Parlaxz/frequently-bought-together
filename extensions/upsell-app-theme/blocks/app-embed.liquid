{% assign promotions = app.metafields.storage.promotions.value | json %}
{% assign storefrontToken = app.metafields.storage.storefrontToken.value.access_token | json %}
{% assign currProduct = product | json %}

<div style="position: fixed; bottom: 0; right: 0">
  <script>
    window.storefrontToken = {{ storefrontToken }};
    window.promotions = {{ promotions }};
    window.currProduct = {{ currProduct }};
  </script>
  <script src="{{ 'lib.js' | asset_url }}" async></script>
  <script src="{{ 'embed.js' | asset_url }}" async></script>
  {{ 'styles.css' | asset_url | stylesheet_tag }}
</div>

{% schema %}
{
  "name": "App Embed",
  "target": "body",
  "settings": []
}
{% endschema %}
